<%= turbo_frame_tag dom_id(@bookmark, :form) do %>
    <%= render 'shared/modal_errors', modal_errors: @bookmark %>
    <%= form_with model: @bookmark, html: { data: {action: 'turbo:submit-end->bookmark#close'}} do |f| %>
        <div class="w-75 mx-auto mb-5">
            <div class="mb-3">
                <%= f.label :url, class: "form-label" %>
                <%= f.text_field :url, class: "form-control", placeholder: t('bookmark.placeholder.url') %>
            </div>
            <div class="mb-3">
                <%= f.label :title, class: "form-label" %>
                <%= f.text_field :title, class: "form-control", placeholder: t('bookmark.placeholder.title') %>
            </div>
            <div class="mb-4">
                <%= f.label :description, class: "form-label" %>
                <%= f.text_field :description, class: "form-control", placeholder: t('bookmark.placeholder.description') %>
            </div >
            <div class="mt-4">
                <%= f.submit t('submit.regist'), id: "modal-bookmark-btn", class: "btn btn-success w-100 rounded-3" %>
            </div >
            <%= f.hidden_field :category_id, value: @category_id %>
            <%= f.hidden_field :folder_id, value: @folder_id %>
        </div>
    <% end %>
<% end %>