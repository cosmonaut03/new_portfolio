<div id=category_<%= category.id %> class="category mb-3">
    <div class="category-header">
        <div class="category-name-box text-center">
            <span class="category-name"><%= category.name %></span>
        </div>
        <% unless category.is_uncategorized %>
            <div class="pe-1">
                <%# 修正リンク %>
                <%= link_to(edit_category_path(category.id), data: { turbo_frame: 'category_modal' }, class: "category-link") do %>
                    <span><i class="bi bi-pencil-fill me-1"></i></span>
                <% end %>

                <%# 削除リンク %>
                <%= link_to category_path(category), data: {turbo_method: :delete, turbo_confirm: t('confirm.delete', title: t('category.title'))}, class: "category-link" do %>
                    <span><i class="bi bi-trash-fill"></i></span>
                <% end %>
            </div>
        <% end %>

    </div> 
    <%# ダミーアイテム %>
    <div class="content">
        <div class="item-back">
            <div class="item-contents">
                <div class="image-container">
                    <%= image_tag("sample.jpg", class: "link-image") %>
                </div>
                <div class="link-title text-start">ダミーTitle</div>
                <div class="link-desc text-start ">ダミーDescription</div>
            </div>
        </div>

        <%# +ボタン(要素) %>
        <div class="item-back add">
            <div class="add-button">
                <i class="bi bi-plus-circle-fill"></i>
            </div>
        </div>
    </div>
</div>
