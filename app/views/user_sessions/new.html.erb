<%= turbo_frame_tag 'login_modal' do %>
<%# ユーザーログイン %>
<div class="modal fade" id="loginModal" data-controller="login_modal" data-action="turbo:submit-end->login_modal#handleResponse">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3">

      <div class="modal-body">
        <div class="text-end">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="text-center mb-4">
          <h1 class="modal-title fs-2 fw-semibold" id="staticBackdropLabel"><%= t('dictionary.login') %></h1>
        </div>
        <%= render "form" %>

        <div class="text-center mt-4 mb-3"><%= t('fixed_phrase.or') %></div>
        <div class="text-center mt-1 mb-4">
            <%= t('fixed_phrase.attend_sign_up') %>
            <%= link_to(t('dictionary.new_user'), new_user_path, id: "modal-new-link", data: {turbo_frame: 'sign_modal', controller: 'sign-in-modal'}) %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
